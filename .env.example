# Runtime
LEADGEN_LOG_DIR=./logs
LEADGEN_OUTPUT_DIR=./output
LEADGEN_TIMEZONE=UTC
LEADGEN_STATE_DB=./logs/pipeline_state.db
LEADGEN_OPS_STATE_DB=./logs/ops_state.db
LEADGEN_PREVIEW_DIR=./output/previews

# Incident policy
LEADGEN_INCIDENT_WINDOW_MIN=15
LEADGEN_INCIDENT_RESET_MIN=30
LEADGEN_INCIDENT_L1=3
LEADGEN_INCIDENT_L2=5
LEADGEN_INCIDENT_L3=8

# Preview publishing
PREVIEW_BASE_URL=https://your-domain.com
PREVIEW_PUBLISH_DIR=/var/www/lead-previews
UNSUBSCRIBE_BASE_URL=https://your-domain.com

# Email (Resend)
RESEND_API_KEY=
RESEND_FROM_EMAIL=Prospeccao <contato@your-domain.com>

# Payments (Stripe)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_SUCCESS_URL=https://your-domain.com/payment/success?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=https://your-domain.com/payment/cancel

# WhatsApp fallback (WPPConnect)
WPP_BASE_URL=https://your-wppconnect-host
WPP_TOKEN=
WPP_INSTANCE=default
WPP_SEND_PATH=/api/{instance}/send-message
LEADGEN_WA_DAILY_LIMIT=40
LEADGEN_EMAIL_ONLY=0
LEADGEN_CLOSE_DAYS=7
LEADGEN_REPLY_CONFIDENCE_MIN=0.65

# AI demo generation
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini

# Optional remote deploy checks
PRE_HEALTHCHECK_URL=https://your-api/health
POST_HEALTHCHECK_URL=https://your-api/health
EXPO_CHECK_URL=https://your-expo/status
